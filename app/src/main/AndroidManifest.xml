<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.secuso.privacyfriendlysketches">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pfa_skizzen_mit_pfahdpi"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="org.secuso.privacyfriendlysketches.activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.secuso.privacyfriendlysketches.activities.TutorialActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.secuso.privacyfriendlysketches.activities.GalleryActivity" />
        </activity>
        <activity
            android:name="org.secuso.privacyfriendlysketches.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="org.secuso.privacyfriendlysketches.activities.AboutActivity"
            android:label="@string/about"
            android:parentActivityName="org.secuso.privacyfriendlysketches.activities.GalleryActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.secuso.privacyfriendlysketches.activities.GalleryActivity" />
        </activity>
        <activity
            android:name="org.secuso.privacyfriendlysketches.activities.HelpActivity"
            android:label="@string/help"
            android:parentActivityName="org.secuso.privacyfriendlysketches.activities.GalleryActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.secuso.privacyfriendlysketches.activities.GalleryActivity" />
        </activity>
        <activity
            android:name="org.secuso.privacyfriendlysketches.activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="org.secuso.privacyfriendlysketches.activities.GalleryActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.secuso.privacyfriendlysketches.activities.GalleryActivity" />
        </activity>
        <activity
            android:name="org.secuso.privacyfriendlysketches.activities.SketchActivity"
            android:label="@string/title_activity_sketch"
            android:parentActivityName="org.secuso.privacyfriendlysketches.activities.GalleryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.secuso.privacyfriendlysketches.activities.GalleryActivity" />
        </activity>
        <activity
            android:name="org.secuso.privacyfriendlysketches.activities.GalleryActivity"
            android:label="@string/title_gallery_sketch"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="org.secuso.privacyfriendlysketches.activities.KeyGenActivity"
            android:label="@string/title_activity_game"
            android:noHistory="true"
            android:parentActivityName="org.secuso.privacyfriendlysketches.activities.GalleryActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.secuso.privacyfriendlysketches.activities.GalleryActivity" />
        </activity>
    </application>


</manifest>